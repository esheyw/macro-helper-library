<form>
  <div class="section-separator">{{mhl-localize "MHL.Prompt.SetAllSelected"}}</div>
  <div class="all-container">
    <label for="{{idPrefix}}all">{{mhl-localize "MHL.Macro.UpdateInitiativeStatistics.AllSharedSkills"}}</label>
    <select id="{{idPrefix}}all" name="all">
      {{selectOptions allSharedSkills blank="-" localize="true"}}
    </select>
  </div>
  <div class="section-separator">{{mhl-localize "MHL.Prompt.SetIndividually"}}</div>
  <div class="actors-container">
    <h3>{{mhl-localize "Name"}}</h3><h3>{{mhl-localize "MHL.Current"}}</h3><h3>{{mhl-localize "MHL.SetTo"}}</h3>
    {{#each actorsData}}
      <label for="{{@root.idPrefix}}{{uuid}}">{{name}}</label>
      <span class="current">{{current}}</span>
      <select id="{{@root.idPrefix}}{{uuid}}" name="{{uuid}}">
        {{selectOptions skills localize="true" blank="-"}}
      </select>
    {{/each}}
  </div>
</form>