  <div class="form-grid">
    {{~#each model.schema.fields as |field|~}}
      <label for="{{concat @root.module '-' @root.key '-' field.name}}">{{mhl-localize field.label}}</label>
      <div class="display-glyph"
        {{~#if (mhl-contains field.name "Icon")~}}
           data-icon-for="{{concat @root.module '-' @root.key '-' field.name}}">{{mhl-icon (lookup @root.model field.name)}}
        {{~else~}}
          >
        {{~/if~}}
      </div>
      <input
        id="{{concat @root.module '-' @root.key '-' field.name}}"
        name="{{field.name}}"
        value="{{lookup @root.model field.name}}"
        type="text"
        {{#if (mhl-contains field.name "Icon")}}data-icon{{/if}}
      />
      {{#if field.hint}}
        <p class="notes">{{mhl-localize field.hint}}</p>
      {{/if}}
    {{/each}}
    
  </div>
  <div class="button-zone">
    <button type="submit" name="submit">
      {{mhl-icon "check"}}
      {{mhl-localize "EFFECT.Submit"}}
    </button>
    <button type="button" name="cancel">
      {{mhl-icon "xmark"}}
      {{mhl-localize "Cancel"}}
    </button>
  </div> 
</form>